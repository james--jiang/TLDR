{
	"manifest_version": 2,
    "name": "TL;DR",
    "description": "Summarizes a whole article or just the highlighted text.",
    "version": "0.9",
    "background": {
        "scripts": ["event.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs", 
        "http://*/*", 
        "https://*/*"
    ]	
}
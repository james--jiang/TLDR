{
	"manifest_version": 2,
    "name": "TL;DR",
    "description": "Summarizes a whole article or just the highlighted text.",
    "version": "0.9",
    "background": {
        "scripts": ["event.js"],
        "persistent": false
    },

    "icons": {"16" : "icons/icong16.png",
                    "48" : "icons/icong48.png",
                    "128" : "icons/icong128.png"
                    },

    "browser_action": {
        
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs", 
        "http://*/*", 
        "https://*/*"
    ]	
}